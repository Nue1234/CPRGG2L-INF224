import java.io.*;

public class App {
    public static void main(String[] args) throws IOException {
        // This is for reading the file.
        BufferedReader reader = null;
        try {
            // Initialize and try to read the file "dummy.txt"
            reader = new BufferedReader(new FileReader("dummy.txt"));

            // This is a condition to stop when the BufferedReader already read the first 5 lines in the "dummy.txt" file. And to print it in the output window.
            for (int i = 0; i < 5; i++) {
                String line = reader.readLine();
                System.out.println(line);
            }
        } catch (IOException e) {
            // This is for when the program have a problem while reading the file.
            System.out.println("Error reading file: " + e.getMessage());
        } finally {
            // This is for the closing the BufferedReader to release the system resources.
            try {
                if (reader != null) {
                    reader.close();
                }
            } catch (IOException e) {
                // This is for when the program have a error while closing the file.
                System.out.println("Error closing file: " + e.getMessage());
            }
        }
    }
}
